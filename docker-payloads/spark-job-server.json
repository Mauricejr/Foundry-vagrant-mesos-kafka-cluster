{
    "id": "/spark-jobserver",
    "instances": 1,
    "cpus": 0.5,
    "mem": 512,
    "shell": "false",
    "env": {
        "SPARK_HOME": "/spark",
        "SPARK_LOCATION": "hdfs://foundry/tmp/spark.tgz",
        "MESOS_MASTER": "mesos://mesos-master:5050",
        "SPARK_SERVER_HOME": "/spark-jobserver/runner",
        "ZK_ENDPOINT": "zk://mesos-master:2181",
        "SPARK_BUILD": "spark-1.1.0-bin-cdh4"
    },
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "theclaymethod/spark-jobserver-mesos",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 8090,
                    "hostPort": 0,
                    "servicePort": 8090,
                    "protocol": "tcp"
                }
            ]
        }
    },
    "healthChecks": [
        {
            "protocol": "TCP",
            "gracePeriodSeconds": 600,
            "intervalSeconds": 5,
            "portIndex": 0,
            "timeoutSeconds": 5,
            "maxConsecutiveFailures": 3
        }
    ]
}