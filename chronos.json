{
    "id": "/chronos",
    "instances": 1,
    "cpus": 0.5,
    "mem": 512,
    "shell": "false",
    "args": ["--master", "zk://100.0.10.11:2181/mesos", "--zk_hosts", "100.0.10.11:2181"],
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "theclaymethod/chronos",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 0,
                    "servicePort": 8081,
                    "protocol": "tcp"
                }
            ]
        }
    }
}