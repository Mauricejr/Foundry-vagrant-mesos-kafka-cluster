{
    "id": "/chronos",
    "instances": 1,
    "cpus": 0.75,
    "mem": 300,
    "shell": "false",
    "args": ["--master", "zk://mesos-master1:2181,mesos-master2:2181,mesos-master3:2181/mesos", "--zk_hosts", "zk://mesos-master1:2181,mesos-master2:2181,mesos-master3:2181"],
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "tomaskral/chronos",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 8081,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ]
        }
    }
}